include icon

mixin button(props)
  -
    const {
      text,
      style = 'primary',
      size = null,
      icon = null,
      type = null,
      className = null,
    } = props;

  button.btn(
    class=`btn-${style}`
    class=size ? `btn-${size}` : null
    class=icon ? 'btn-icon' : null
    class=className
    type=type
  )
    span.btn-text= text
    if icon
      +icon({ name: icon, size: 'md' })
